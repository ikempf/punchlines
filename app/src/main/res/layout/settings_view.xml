<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_margin"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_language"
        android:textSize="@dimen/text_medium"/>

    <include layout="@layout/separator" />

    <CheckBox
        android:id="@+id/setting_language_all"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_language_all"
        android:onClick="onClick"/>

    <CheckBox
        android:id="@+id/setting_language_en"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_language_en"
        android:onClick="onClick"/>

    <CheckBox
        android:id="@+id/setting_language_fr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/setting_language_fr"
        android:onClick="onClick"/>

</LinearLayout>